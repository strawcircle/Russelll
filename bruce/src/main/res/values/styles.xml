<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BruceTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="bruceTitleColor">#3F51B5</item>
        <item name="bruceAccentColor">#FF4081</item>
        <item name="colorPrimary">?attr/bruceTitleColor</item>
        <item name="colorPrimaryDark">?attr/bruceTitleColor</item>
        <item name="colorAccent">?attr/bruceAccentColor</item>
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/SettingsWindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/SettingsWindowTitleText</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SettingsWindowTitleBackground">
    </style>
    <style name="SettingsWindowTitleText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BruceDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>